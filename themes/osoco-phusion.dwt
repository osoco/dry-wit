# mod: OSOCO theme
# api: public
# txt: OSOCO theme

# Available colors:
# - BLACK
# - RED
# - GREEN
# - BLUE
# - MAGENTA
# - CYAN
# - GRAY
# - BRIGHT_BLACK
# - BRIGHT_RED
# - BRIGHT_GREEN
# - BRIGHT_YELLOW
# - BRIGHT_BLUE
# - BRIGHT_MAGENTA
# - BRIGHT_CYAN
# - WHITE

# The default color for outcome messages.
setDefaultLogOutcomeColor GRAY;

# The color for "success" outcome messages.
setSuccessColor BRIGHT_GREEN;

# The color for "failure" outcome messages.
setFailureColor BRIGHT_RED;

# The default color for nested tasks.
setDefaultLogResumingTaskColor WHITE;

# The outcome tokens.
setLogOutcomeTokens "[" "done" "]";

# The colors of the outcome tokens.
setLogOutcomeColors BRIGHT_CYAN GRAY BRIGHT_CYAN;

# The position of the outcome itself in the outcome tokens.
setOutcomeTextPositionInLogOutcome 1;

# The color for nested tasks.
setInProgressColor BRIGHT_RED;

# The color to use when no color is specified.
setNoColor GRAY;

# The marker for nested tasks / tasks in progress.
setNestedTaskInProgressMarker "....";

# The timestamp format.
setLogTimestampFormat "+%Y/%m/%d %H:%M:%S";

# The separator between the message and the outcome.
setLogOutcomeSeparator " ";

# The indentation to use in nested tasks.
setLogNestedIndentation "";

# The default color for log prefixes.
setDefaultLogPrefixColor WHITE;

# The ordered list of prefix tokens.
setLogPrefixTokens "[" "timestamp" "<" "namespace" "|" "category" ">" "logLevel" "]";

# The ordered list of colors for log prefixes (see prefix tokens above).
setLogPrefixColors BRIGHT_RED BRIGHT_YELLOW BRIGHT_CYAN BRIGHT_YELLOW BRIGHT_CYAN BRIGHT_RED BRIGHT_MAGENTA BRIGHT_YELLOW BRIGHT_BLUE;

# The position of the timestamp token in the log prefix list.
setTimestampPositionInLogPrefix 1;

# The position of the namespace token in the log prefix list.
setNamespacePositionInLogPrefix 3;

# The position of the category token in the log prefix list.
setCategoryPositionInLogPrefix 5;

# The position of the level token in the log prefix list.
setLevelPositionInLogPrefix 7;

# The token to use for "logLevel" in case of an error message.
setErrorLogPrefixToken "X";

# The token to use for "logLevel" in case of a warn message.
setWarnLogPrefixToken "x";

# The token to use for "logLevel" in case of an info message.
setInfoLogPrefixToken ".";

# The token to use for "logLevel" in case of a debug message.
setDebugLogPrefixToken "o";

# The token to use for "logLevel" in case of a trace message.
setTraceLogPrefixToken "O";

